<div class="p">
  <year-selector id="year-selector" min="2013" max="2022" value="2022"></year-selector>
</div>

<section>
  <div class="container">
    <h2>Artists</h2>
    <div id="artists" class="p">
      <% for (let i = 0; i < 10; i++) { %>
        <artist-listing></artist-listing>
      <% } %>
      <div class="center">
        <%- externalLink("More", { href: "#", class: "button more" }) %>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <h2>Albums</h2>
    <div id="albums">
      <% for (let i = 0; i < 10; i++) { %>
        <album-listing></album-listing>
      <% } %>
      <div class="center">
        <%- externalLink("More", { href: "#", class: "button more" }) %>
      </div>
    </div>
  </div>
</section>

<section class="resources">
  <div class="container">
    <h2>Resources</h2>

    <ul>
      <li>
        <%- externalLink("My Last FM profile", {
          href: "https://www.last.fm/user/iBrianAnders"
        }); %>
      </li>

      <%
        const years = [];
        for (let i = (new Date).getFullYear(); i >= 2013; i--) {
          years.push(i);
        }
        years.forEach((year) => {
      %>
        <li>
          <%-
            externalLink(`${year} Scrobbles`, {
              href: `https://www.last.fm/user/iBrianAnders/library/artists?from=${year}-01-01&rangetype=year`
            });
          %>
        </li>
      <% }); %>
    </ul>
  </div>
</section>