{{#each artists as |artist index|}}
  {{#if (lt index length)}}
    {{#if showDescription}}
      <div class="artist-tile">
        <a itemprop="url" target="_blank" href="{{artist.url}}" class="artist" title="{{artist.name}}">
          {{image-tag src=artist.image alt=artist.name }}
          <ul>
            <li class="name">
              {{artist.name}}
            </li>
          </ul>
        </a>
      </div>
    {{else}}
      <a itemprop="url" target="_blank" href="{{artist.url}}" class="artist" title="{{artist.name}}">
        {{image-tag src=artist.image alt=artist.name }}
      </a>
    {{/if}}
  {{/if}}
{{/each}}
