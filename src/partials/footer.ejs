<link rel="preload" media="all" href="/styles/modules/footer.css" lazyload onload="this.onload=null;this.rel='stylesheet'" as="style">
<noscript>
  <link rel="stylesheet" media="all" href="/styles/modules/footer.css">
</noscript>

<footer class="<%- (locals.pageClasses) ? locals.pageClasses.toString().replace(/,/g,' ') : '' %>" role="navigation" aria-label="Site footer">
  <div class="content">
    <span>
      <% const date = new Date(); %>
      &copy; <%- date.getFullYear(); %>
    </span>
    <span>
      <% const contactLinks = [
          { copy: 'Twitter', url: locals.twitter, },
          { copy: 'Last.fm', url: locals.lastfm, },
          { copy: 'Github', url: locals.github, },
          { copy: 'LinkedIn', url: locals.linkedin, },
        ].map(item => {
          return externalLink(item.copy, {
            href: item.url,
          });
        });
      %>
      <%- contactLinks.join(' - ') %>
      - <button id=blindfold class=link type=button >Toggle Blindfold Mode</button>
    </span>
  </div>
</footer>
