<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:mobile="http://www.google.com/schemas/sitemap-mobile/1.0"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml"
  ><%
    for(let i = 0; i < locals.pages.length; i++) {
      const page = locals.pages[i];
      const date = page.data.date || new Date();
      const dateOutput = `${date.getFullYear()}-${('00' + (date.getMonth() + 1)).slice(-2)}-${('00' + date.getDate()).slice(-2)}`;
      if(page.data.robots !== false) {
  %>
  <url>
    <loc><%- locals.siteData.domain %><%- page.url %></loc>
    <lastmod><%- dateOutput %></lastmod>
    <priority><%- page.data.priority %></priority>
    <changefreq>yearly</changefreq>
  </url><%
      }
    }
  %>
</urlset>